<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgHomeScreen"
    tools:context=".sign_up_activity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/rectangle1"
        android:layout_alignParentBottom="true"
        android:id="@+id/imglay1"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/welcome" />
    <ImageView
        android:id="@+id/imgsignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/imglay1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="153dp"
        android:layout_marginBottom="-70dp"
        android:src="@drawable/signup" />

    <ImageView
        android:id="@+id/arrowleft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrowleft"
        android:layout_marginTop="199dp"
        android:layout_marginLeft="25dp"/>




    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgsignUp"
        android:src="@drawable/email"
        android:id="@+id/formEmail"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="120dp"/>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/formEmail"
        android:id="@+id/usernameForm"
        android:layout_marginTop="-90dp"
        android:layout_marginLeft="50dp"
        android:src="@drawable/usernameform"
        android:layout_marginBottom="120dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/passwordform"
        android:layout_below="@id/usernameForm"
        android:id="@+id/passwordForm"
        android:layout_marginTop="-90dp"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="120dp"/>



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loginbuttonID"
        android:layout_below="@id/passwordID"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="98dp"
        android:src="@drawable/loginbutton" />

    <EditText
        android:id="@+id/emailID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:layout_above="@id/imglay1"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="500dp"
        android:layout_marginBottom="-180dp"
        android:background="@drawable/edit_text_custom"
        android:fontFamily="@font/poppins_bold"
        android:hint="user@email.com"
        android:textColor="@color/black"
        android:textSize="15dp" />



    <EditText
        android:id="@+id/usernameID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/emailID"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="258dp"
        android:background="@drawable/edit_text_custom"
        android:fontFamily="@font/poppins_light"
        android:hint="username"
        android:textColor="@color/black"
        android:textSize="15dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/passwordID"
        android:hint="password"
        android:textColor="@color/black"
        android:inputType="textPassword"
        android:background="@drawable/edit_text_custom"
        android:textSize="15dp"
        android:fontFamily="@font/poppins_light"
        android:layout_below="@id/usernameID"
        android:layout_marginTop="75dp"
        android:layout_marginLeft="80dp"/>

</RelativeLayout>